roslaunch qb_device_driver communication_handler.launch
<launch>
  <!-- Communication handler node -->
  <include file="$(find qb_device_driver)/launch/communication_handler.launch"/>

  <!-- Control node -->
  <include file="$(find qb_hand_control)/launch/control_qbhand2m.launch">
    <arg name = "activate_on_initialization" default = "false"/>    <!-- Activates motors at startup -->
    <arg name = "standalone" default = "true"/>                     <!-- Starts the Communication Handler together with the control Node -->
    <arg name = "use_controller_gui" default = "false"/>            
    <arg name = "device_id" default = "1"/>                         

</launch>